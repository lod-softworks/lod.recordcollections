<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Product>Lod.RecordCollections.IlAssembler</Product>
    <AssemblyName>Lod.RecordCollections.IlAssembler</AssemblyName>
    <Copyright>Copyright © 2022-2025 Lod Softworks LLC</Copyright>
    <Description>IL disembler and assembler to make record compliant classes.</Description>
    <Authors>Lod Softworks LLC</Authors>
    <TargetFramework>net10.0</TargetFramework>
    <TargetType>exe</TargetType>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GenerateProgramFile>false</GenerateProgramFile>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="runtime.win-x64.Microsoft.NETCore.ILAsm" Version="10.0.1" />
    <PackageReference Include="runtime.win-x64.Microsoft.NETCore.ILDasm" Version="10.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Lod.RecordCollections\Lod.RecordCollections.csproj" />
  </ItemGroup>

</Project>
